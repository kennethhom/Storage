<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg" >

    

    <ScrollView 
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33" >

    	<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="418dp"
        	android:orientation="vertical" >
            
    		<TextView
        		android:id="@+id/textView1"
       	 		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="@string/Name" />

    		<EditText
        		android:id="@+id/etSQLName"
        		android:inputType="text"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:ems="10" >

        		<requestFocus />
    		</EditText>

    		<TextView
        		android:id="@+id/textView2"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="@string/Opinion" />

		    <EditText
		        android:id="@+id/etSQLOpinion"
		        android:inputType="text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <TextView
		        android:id="@+id/textView3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Vintage" />
		
		    <EditText
		        android:id="@+id/etSQLVintage"
		        android:inputType="number"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <TextView
		        android:id="@+id/textView4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Type_of_Wine" />
		
		    <EditText
		        android:id="@+id/etSQLTypeOfWine"
		        android:inputType="text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <TextView
		        android:id="@+id/textView5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Rating" />
		
		    <EditText
		        android:id="@+id/etSQLRating"
		        android:inputType="number"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <TextView
		        android:id="@+id/textView6"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Price" />
		
		    <EditText
		        android:id="@+id/etSQLPrice"
		        android:inputType="number"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <TextView
		        android:id="@+id/textView7"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Entry_Date" />
		
		    <EditText
		        android:id="@+id/etSQLEntryDate"
		        android:inputType="date"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <TextView
		        android:id="@+id/textView8"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Appearance" />
		
		    <EditText
		        android:id="@+id/etSQLAppearance"
		        android:inputType="text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <TextView
		        android:id="@+id/textView9"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Taste" />
		
		    <EditText
		        android:id="@+id/etSQLTaste"
		        android:inputType="text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <TextView
		        android:id="@+id/textView10"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Aroma" />
		
		    <EditText
		        android:id="@+id/etSQLAroma"
		        android:inputType="text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <TextView
		        android:id="@+id/textView11"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Serving_Temperature" />
		
		    <EditText
		        android:id="@+id/etSQLServingTemp"
		        android:inputType="number"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <TextView
		        android:id="@+id/textView12"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Country" />
		
		    <EditText
		        android:id="@+id/etSQLCountry"
		        android:inputType="text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />

		    <TextView
		        android:id="@+id/textView13"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/Alcohol_Content" />
		
		    <EditText
		        android:id="@+id/etSQLLevel"
		        android:inputType="text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" />
		    
		    <Button
		        android:id="@+id/btnAdd"
		        android:layout_width="fill_parent"
		        android:layout_height="60dp"
		        android:text="@string/Add_Image" />
		    
		
		    <Button
		        android:id="@+id/bSQLUpdate"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="@string/update_database" />
		
		    <Button
		        android:id="@+id/bSQLopenView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:text="@string/View" />
		    
        </LinearLayout>
    </ScrollView>

</LinearLayout>